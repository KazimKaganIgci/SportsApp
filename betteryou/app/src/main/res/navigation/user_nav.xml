<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/cardioFragment"
        android:name="com.kazim.betteryou.UserFragments.CardioFragment"
        android:label="fragment_cardio"
        tools:layout="@layout/fragment_cardio" />
    <fragment
        android:id="@+id/foodFragment"
        android:name="com.kazim.betteryou.UserFragments.FoodFragment"
        android:label="fragment_food"
        tools:layout="@layout/fragment_food" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kazim.betteryou.UserFragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.kazim.betteryou.UserFragments.MessageFragment"
        android:label="fragment_message"
        tools:layout="@layout/fragment_message" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.kazim.betteryou.UserFragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_answerFragment"
            app:destination="@id/answerFragment" />
        <action
            android:id="@+id/action_profileFragment_to_supplementFragment"
            app:destination="@id/supplementFragment" />
        <action
            android:id="@+id/action_profileFragment_to_chickenFragment"
            app:destination="@id/chickenFragment" />
        <action
            android:id="@+id/action_profileFragment_to_blogFragment"
            app:destination="@id/blogFragment" />
        <action
            android:id="@+id/action_profileFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>
    <fragment
        android:id="@+id/answerFragment"
        android:name="com.kazim.betteryou.UserFragments.AnswerFragment"
        android:label="fragment_answer"
        tools:layout="@layout/fragment_answer" />
    <fragment
        android:id="@+id/supplementFragment"
        android:name="com.kazim.betteryou.UserFragments.SupplementFragment"
        android:label="SupplementFragment" />
    <fragment
        android:id="@+id/chickenFragment"
        android:name="com.kazim.betteryou.UserFragments.ChickenFragment"
        android:label="ChickenFragment" />
    <fragment
        android:id="@+id/blogFragment"
        android:name="com.kazim.betteryou.UserFragments.BlogFragment"
        android:label="BlogFragment" />
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.kazim.betteryou.UserFragments.NoteFragment"
        android:label="NoteFragment" />
</navigation>