<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".UserFragments.FoodFragment">


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="1.Gün"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn2"

            android:layout_width="80dp"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="40dp"
            android:text="2.Gün"
            />

        <Button
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="40dp"
            android:text="3.Gün"
            />

        <Button
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="40dp"
            android:text="4.Gün" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="40dp"
            android:text="5.Gün" />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beslenme Programı"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btn1"
        android:layout_margin="2dp"
        android:orientation="vertical">




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/custom_btn1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/daytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:textSize="20dp"></TextView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Malzemeler"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#D3D3D3"
            android:textSize="25dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Kahvaltı"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textAlignment="center"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/black"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@color/white"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Yemeğin adı"
                        android:textColor="#FBF8F8"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/content1"
                        android:layout_width="match_parent"
                        android:text="Yemek tarifi"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#808080" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Öğle Yemeği"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textAlignment="center"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:background="@color/black"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@color/white"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Yemeğin adı"
                        android:textColor="#FBF8F8"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/content2"
                        android:layout_width="match_parent"
                        android:text="Yemek tarifi"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#808080" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Akşam Yemeği"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textAlignment="center"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:background="@color/black"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@color/white"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Yemeğin adı"
                        android:textColor="#FBF8F8"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/content3"
                        android:layout_width="match_parent"
                        android:text="Yemek tarifi"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#808080" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>












    </LinearLayout>

</LinearLayout>

